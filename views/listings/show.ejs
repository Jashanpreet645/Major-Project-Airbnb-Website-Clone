<%- layout('layouts/boilerplate.ejs') -%>
<div class="row mt-3">
    <div class="col-8 offset-3">
        <h3>Listing Details</h3>
    </div>
    <div class="card col-6 offset-3 show-card">
        <img src="<%= listing.image %>" alt="listing_Image" class="card-img-top show-image">
        <div class="card-body">
            <p class="card-text">
                <b><%= listing.title %></b>
                <br>
                <b>Description:</b> <%= listing.description %>
                <br>
                <b>Price:</b> &#x20b9; <%= listing.price.toLocaleString("en-IN") %>
                <br>
                <b>Location:</b> <%= listing.location %>
                <br>
                <b>Country:</b> <%= listing.country %>
                <br>
            </p>
        </div>
    </div>
    <br>
    <div class="btns col-8 offset-3">
        <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark add-btn col-1">EDIT</a>
        <form method="post" action="/listings/<%= listing._id%>?_method=Delete">
            <button type="submit" class="btn btn-dark add-btn offset-2">DELETE</button>
        </form>
        <a href="/listings" class="btn btn-dark add-btn col-3 offset-4">Back to Listings</a>
    </div>
</div>